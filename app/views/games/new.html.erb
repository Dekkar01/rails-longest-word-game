<h1>NEW GAME</h1>
<h3><% @data_start %></h3>
<ul>
  <%  @letters.each do |letter| %>
      <li> <%= letter %> </li>
  <% end %>

</ul>


<div class="container mt-5">
  <h1>Guess the word:</h1>
  <form class="form-inline" action="/score" method="POST" data-turbo="false">
    <div class="form-group mb-2">
      <label for="word" class="sr-only">Ask your coach a question:</label>
      <input type="text" class="form-control mr-2" name="word" id='word'>
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <button type="submit" class="btn btn-primary mb-2">Ask!</button>

  </form>

</div>
